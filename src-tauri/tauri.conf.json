{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Dx3 Controller",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.dx3.controller",
      "icon": [
        "icons/app_icon.png",
        "icons/app_icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Dx3 Controller",
        "width": 800,
        "height": 800,
        "visible": false,
        "center": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/app_icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}